<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    >
    
    <TextView 
        android:layout_height="500dp" 
        android:layout_width="match_parent"
	    android:id="@+id/popup_result" 
	    android:gravity="center" android:layout_gravity="center" 
	    android:textSize="100dp"
    	android:layout_weight="8" />
   
   	<LinearLayout 
   	    android:layout_width="match_parent"
	    android:layout_height="75dp"
	    android:orientation="horizontal"
	    android:layout_weight="1" >
	    
	    <Button android:id="@+id/popup_details" android:layout_weight="1" android:layout_width="300dp" android:layout_height="match_parent" android:text="@string/popup_details" />
	    <Button android:id="@+id/popup_close" android:layout_weight="1" android:layout_width="300dp" android:layout_height="match_parent" android:text="@string/popup_close" />
	    
    </LinearLayout>
	    
    
</LinearLayout>
