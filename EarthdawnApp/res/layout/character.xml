<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sheet_character"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@android:drawable/gallery_thumb" >

    <TableRow android:layout_width="match_parent" >

        <TextView
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_span="2"
            android:layout_weight="6"
            android:text="@string/sheet_infos_title" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/medium"
            android:layout_weight="2"
            android:text="@string/sheet_name" />

        <TextView
            android:id="@+id/sheet_name"
            style="@style/medium"
            android:layout_weight="4" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/medium"
            android:layout_weight="2"
            android:text="@string/sheet_race" />

        <TextView
            android:id="@+id/sheet_race"
            style="@style/medium"
            android:layout_weight="4" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/medium"
            android:layout_weight="2"
            android:text="@string/sheet_age" />

        <TextView
            android:id="@+id/sheet_age"
            style="@style/medium"
            android:layout_weight="4" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/medium"
            android:layout_weight="2"
            android:text="@string/sheet_sex" />

        <TextView
            android:id="@+id/sheet_sex"
            style="@style/medium"
            android:layout_weight="4" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/medium"
            android:layout_weight="2"
            android:text="@string/sheet_height" />

        <TextView
            android:id="@+id/sheet_height"
            style="@style/medium"
            android:layout_weight="4" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            style="@style/medium"
            android:layout_weight="2"
            android:text="@string/sheet_weight" />

        <TextView
            android:id="@+id/sheet_weight"
            style="@style/medium"
            android:layout_weight="4" />
    </TableRow>

</TableLayout>