<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sheet_legend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@android:drawable/gallery_thumb" >

    <TableRow android:layout_width="match_parent" >

        <TextView
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_span="2"
            android:layout_weight="5"
            android:text="@string/sheet_legend_title" />
    </TableRow>

    <TableRow android:layout_width="match_parent" >

        <TextView
            style="@style/medium"
            android:layout_weight="3"
            android:text="@string/sheet_legend_total" />

        <TextView
            android:id="@+id/sheet_legend_total"
            style="@style/medium"
            android:layout_weight="2" />
    </TableRow>

    <TableRow android:layout_width="match_parent" >

        <TextView
            style="@style/medium"
            android:layout_weight="3"
            android:text="@string/sheet_legend_spent" />

        <TextView
            android:id="@+id/sheet_legend_spent"
            style="@style/medium"
            android:layout_weight="2" />
    </TableRow>

    <TableRow android:layout_width="match_parent" >

        <TextView
            style="@style/medium"
            android:layout_weight="3"
            android:text="@string/sheet_legend_karma" />

        <TextView
            android:id="@+id/sheet_legend_karma"
            style="@style/medium"
            android:layout_weight="2" />
    </TableRow>

    <TableRow android:layout_width="match_parent" >

        <TextView
            style="@style/medium"
            android:layout_weight="3"
            android:text="@string/sheet_legend_available" />

        <TextView
            android:id="@+id/sheet_legend_available"
            style="@style/medium"
            android:layout_weight="2" />
    </TableRow>

</TableLayout>