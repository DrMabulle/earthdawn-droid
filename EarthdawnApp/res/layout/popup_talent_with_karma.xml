<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/talent_with_karma_msg"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <CheckBox
            android:id="@+id/talent_with_karma_discipline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="@string/talent_with_karma_discipline" />

        <CheckBox
            android:id="@+id/talent_with_karma_mandatory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/talent_with_karma_mandatory" />
    </LinearLayout>

    <TextView
        android:id="@+id/talent_with_karma_available_points"
        style="@style/medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp" />

    <include layout="@layout/popup_buttons" />

</LinearLayout>