<?xml version="1.0" encoding="utf-8"?>

    <TableLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/sheet_disciplines" android:layout_margin="2dp"
		android:background="@android:drawable/gallery_thumb">
    
    	<TableRow android:layout_width="match_parent">
        	<TextView style="@style/title"
			    android:layout_weight="3" 
			    android:text="@string/sheet_disciplines" />
        	<TextView style="@style/title"
			    android:layout_weight="2" 
			    android:text="@string/sheet_circle" />
        </TableRow>
        
        <TableRow android:layout_width="match_parent">
        	<TextView style="@style/medium"
			    android:id="@+id/sheet_main_discipline" 
			    android:layout_weight="3" />    
			<TextView style="@style/medium"
			    android:layout_gravity="center_horizontal" android:layout_weight="2"
			    android:id="@+id/sheet_main_circle" />    
        </TableRow>
        
        <TableRow android:layout_width="match_parent">
        	<TextView style="@style/medium"
			    android:id="@+id/sheet_second_discipline" 
			    android:layout_weight="3" />    
			<TextView style="@style/medium"
			    android:layout_gravity="center_horizontal" android:layout_weight="2"
			    android:id="@+id/sheet_second_circle" />    
        </TableRow>
        
        <TableRow android:layout_width="match_parent">
        	<TextView style="@style/medium"
			    android:id="@+id/sheet_third_discipline" 
			    android:layout_weight="3" />    
			<TextView style="@style/medium"
			    android:layout_gravity="center_horizontal" android:layout_weight="2"
			    android:id="@+id/sheet_third_circle" />    
        </TableRow>
        
    </TableLayout>
