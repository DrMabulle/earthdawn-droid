<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center_horizontal" android:gravity="center_horizontal" >
    
    <TextView style="@style/medium" android:id="@+id/talents_talent_id" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
    <TextView style="@style/medium" android:id="@+id/talents_talent" android:layout_width="400dp" android:layout_gravity="center_vertical" android:gravity="center_vertical" android:layout_height="wrap_content" />
    <TextView style="@style/medium" android:id="@+id/talents_circle" android:layout_width="75dp" android:layout_gravity="center" android:gravity="center" android:layout_height="wrap_content" />
    <TextView style="@style/medium" android:id="@+id/talents_rank" android:layout_width="75dp" android:layout_gravity="center" android:gravity="center" android:layout_height="wrap_content" />
    <TextView style="@style/medium" android:id="@+id/talents_attribut" android:layout_width="75dp" android:layout_gravity="center" android:gravity="center" android:layout_height="wrap_content" />
    <TextView style="@style/medium" android:id="@+id/talents_level" android:layout_width="75dp" android:layout_gravity="center" android:gravity="center" android:layout_height="wrap_content" />
    <RadioButton style="@style/medium" android:id="@+id/talents_discipline" android:layout_width="100dp" android:layout_gravity="center" android:gravity="center" android:clickable="false" android:layout_height="wrap_content" />
    <RadioButton style="@style/medium" android:id="@+id/talents_karma" android:layout_width="75dp" android:layout_gravity="center" android:gravity="center" android:clickable="false"  android:layout_height="wrap_content" />
    <RadioButton style="@style/medium" android:id="@+id/talents_action" android:layout_width="75dp" android:layout_gravity="center" android:gravity="center" android:clickable="false" android:layout_height="wrap_content" />
    <TextView style="@style/medium" android:id="@+id/talents_effort" android:layout_width="75dp" android:layout_gravity="center" android:gravity="center" android:layout_height="wrap_content" />
   	<ImageButton style="@style/medium" android:id="@+id/talent_roll" android:layout_width="75dp" android:layout_gravity="center" android:gravity="center" android:src="@drawable/dice" android:layout_height="wrap_content" android:contentDescription="@string/roll" />
    <TextView style="@style/medium" android:id="@+id/talents_page" android:layout_width="75dp" android:layout_gravity="center" android:gravity="center" android:layout_height="wrap_content" />
    
</LinearLayout>    

    



