<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical" >

        <include layout="@layout/character" />

        <include layout="@layout/disciplines" />

        <include layout="@layout/attributs" />

        <include layout="@layout/health" />

        <include layout="@layout/karma" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical" >

        <include layout="@layout/deductibles" />

        <include layout="@layout/legend" />
    </LinearLayout>

</LinearLayout>